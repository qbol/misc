//description: По номеру дня недели, введенному с клавиатуры,
             // вывести на экран название дня недели  
#include <iostream>
#include <stdio.h>
#include <locale>
using namespace std;

////// Basic function //////
int main ()
{
    setlocale(LC_ALL,".1251"); //local
    
    char day;

    printf("Введите номер дня недели\n");
    
    scanf("%c",&day);
    
     
    
    switch (day)
    
    {
    
    case'1': printf("Понедельник\n");break;
    
    case'2': printf("Вторник\n");break;
    
    case'3': printf("Среда\n");break;
    
    case'4': printf("Четверг\n");break;
    
    case'5': printf("Пятница\n");break;
    
    case'6': printf("Суббота\n");break;
    
    case'7': printf("Воскресенье\n");break;
    
    default: printf("Ошибка ввода\n");
    
    }
    
    system ("pause");
    return 0;    
 }
     
